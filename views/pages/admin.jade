extends ../layout

block content
 h1.loginTitle Login 
  .link
    a(href='/admin/sign-up') Sign Up 
    a.home(href='/restaurants'):  i.fa.fa-home
 div.newPageContainer
   include ../includes/errors.jade
   br
   p.adminLoginTitle Login to your account
   div.newFormContainerAdmin
     form(method='post' action='/admin/login')  
       div.adminform
         label(for='username') Username
         input.form-control(type='text' id='username' name='username' placeholder='Username')
       div.adminform
         label(for='password') Password
         input.form-control(type='password' id='password' name='password' placeholder='Password')
         button.adminSubmit.submitNew(type='submit') Login
  if notice
    p.notice=notice
