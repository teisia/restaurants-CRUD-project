extends ../layout

block content
  h1 New Neighborhood
  div.newPageContainer
    include ../includes/errors.jade
    br
    p New Neighborhood
    div.newFormContainer
      form(method='post' action='/neighborhoods')
        div.form.review
          label(for='name') Name
          input.form-control(type='text' id='name' name='name' placeholder='Name')
        div.form.review
          label(for='epicenter') Epicenter 
          textarea.form-control(id='epicenter', name='epicenter' placeholder='Epicenter Address')
        div.form.review
          button.cancelNew: a(href='/neighborhoods') Cancel
          button.submitNew(type='submit') Submit
