extends ../layout

block content
  if neighborhoods
    h1 Edit Neighborhood
      .link
        a(href='/restaurants'):  i.fa.fa-home
    div.newPageContainer
      p Edit Neighborhood
        div.newFormContainer
          form(method='post' action='/neighborhoods/'+neighborhoods.id+'')
            div.form.review
              label(for='name') Name
              input.form-control(type='text' id='name' name='name' value=neighborhoods.name)
            div.form.review
              label(for='epicenter') Epicenter 
              textarea.form-control(id='epicenter', name='epicenter') #{neighborhoods.epicenter}
            div.form.review
              button.cancelNew: a(href='/neighborhoods/'+neighborhoods.id+'') Cancel
              button.submitNew(type='submit') Submit
